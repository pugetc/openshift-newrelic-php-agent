#!/bin/bash -e

source $OPENSHIFT_CARTRIDGE_SDK_BASH

function read_pid() {
    if [ -f $OPENSHIFT_NEWRELIC_DIR/var/run/newrelic.pid ]; then
        echo $(<$OPENSHIFT_NEWRELIC_DIR/var/run/newrelic.pid)
    fi
}

function isrunning() {
    local pid=`read_pid`
    kill -0 "$pid" 2>/dev/null || return 1
}

function start {
	oo-erb $OPENSHIFT_NEWRELIC_DIR/conf/newrelic.ini.erb > $OPENSHIFT_NEWRELIC_DIR/conf/newrelic.ini
	export PHP_INI_SCAN_DIR=$PHP_INI_SCAN_DIR:$OPENSHIFT_NEWRELIC_DIR/conf
	gear reload -c php 2>/dev/null
}

function stop {
	local pid=`read_pid`
	if isrunning; then
		kill "$pid" 2>/dev/null
		rm -f $NEWRELIC_DAEMON_PID=$OPENSHIFT_NEWRELIC_DIR/var/run/newrelic.pid
		> $OPENSHIFT_NEWRELIC_DIR/conf/newrelic.ini
	fi
}


case "$1" in
	start) start ;;
	stop) stop ;;
	restart) 
		stop
		start
  	;;
	status)
		if isrunning
		then
			client_result "NewRelic is running"
		else
			client_result "NewRelic is stopped"
		fi
		exit 0
	;;
esac
